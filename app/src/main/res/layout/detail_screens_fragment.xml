<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailScreens">


    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="98dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/divider" />

    <TextView
        android:id="@+id/we_have_mad"
        android:layout_width="372dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="28dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="3sp"
        android:text="@string/we_have_mad"
        android:textAppearance="@style/we_have_mad" />



    <TextView
        android:id="@+id/your_acne_p"
        android:layout_width="284dp"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="73dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="2sp"
        android:text="@string/your_acne_p"
        android:textAppearance="@style/your_acne_p" />

    <RelativeLayout
        android:id="@+id/back_button"
        android:layout_width="25dp"
        android:layout_height="27dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/back_sign" />

    <TextView
        android:id="@+id/cystic_acne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="362dp"
        android:layout_marginRight="40dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3sp"
        android:text="@string/cystic_acnet"
        android:textAppearance="@style/cystic_acnet" />

    <TextView
        android:id="@+id/cystic_acnet"
        android:layout_width="280dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="317dp"
        android:gravity="top"
        android:text="@string/cystic_acne"
        android:textAppearance="@style/cystic_acne" />

    <TextView
        android:id="@+id/the_highest"
        android:layout_width="224dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="116dp"
        android:text="@string/the_highest"
        android:textAppearance="@style/the_highest"
        android:gravity="top"
        />


    <TextView
        android:id="@+id/other_possi"
        android:layout_width="132dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="448dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/other_possi"
        android:textAppearance="@style/other_possi" />

    <View
        android:id="@+id/rectangle_4"
        android:layout_width="347dp"
        android:layout_height="148dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/signblue" />

    <RelativeLayout
        android:id="@+id/other_possit"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_marginTop="483dp"
        android:background="@drawable/other_possi"
        android:clipToOutline="true" />

</FrameLayout>